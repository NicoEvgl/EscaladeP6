<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DAO statement -->
   <bean id="abstractDao" class="org.nico.consumer.impl.AbstractDao" abstract="true">
       <property name="dataSourceEscalade" ref="dataSourceEscalade"></property>
   </bean>

    <bean id="userDao" class="org.nico.consumer.impl.dao.UserDaoImpl" parent="abstractDao"/>
    <bean id="climbingSiteDao" class="org.nico.consumer.impl.dao.ClimbingSiteDaoImpl" parent="abstractDao"/>
    <bean id="photoDao" class="org.nico.consumer.impl.dao.PhotoDaoImpl" parent="abstractDao"/>
    <bean id="sectorDao" class="org.nico.consumer.impl.dao.SectorDaoImpl" parent="abstractDao" />
    <bean id="routeDao" class="org.nico.consumer.impl.dao.RouteDaoImpl" parent="abstractDao"/>
    <bean id="commentDao" class="org.nico.consumer.impl.dao.CommentDaoImpl" parent="abstractDao"/>
    <bean id="guideBookDao" class="org.nico.consumer.impl.dao.GuideBookDaoImpl" parent="abstractDao"/>


    <!-- DAO Factory -->
    <bean id="daoFactory" class="org.nico.consumer.impl.DaoFactoryImpl">
        <property name="userDao" ref="userDao"/>
        <property name="climbingSiteDao" ref="climbingSiteDao"/>
        <property name="photoDao" ref="photoDao"/>
        <property name="sectorDao" ref="sectorDao"/>
        <property name="routeDao" ref="routeDao"/>
        <property name="commentDao" ref="commentDao"/>
        <property name="guideBookDao" ref="guideBookDao"/>
    </bean>


</beans>
