<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DAO statement -->
    <bean id="abstractDao" class="org.nico.consumer.impl.AbstractDao" abstract="true">
        <property name="dataSourceEscalade" ref="dataSourceEscalade"/>
    </bean>

    <bean id="memberDao" class="org.nico.consumer.impl.dao.MemberDaoImpl" parent="abstractDao" />

    <!-- DAO Factory -->
    <bean id="daoFactory" class="org.nico.consumer.impl.DaoFactoryImpl">
        <property name="MemberDao" ref="memberDao"/>
    </bean>


</beans>
